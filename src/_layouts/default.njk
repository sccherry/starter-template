<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or site.name }} | {{ site.name }}</title>
    <meta name="description" content="{{ site.description }}" />
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}" />
    <script src="{{ '/js/main.js' | url }}" type="module"></script>
  </head>
  <body>
    <header role="banner">
      <h1>
        <a href="{{ '/' | url }}">{{ site.name }}</a>
      </h1>
    </header>

    <nav role="navigation">
      <ul>
        {% for page in collections.all | eleventyNavigation %}
        <li>
          <a href="{{ page.url }}">{{ page.title }}</a>
        </li>
        {% endfor %}
      </ul>
    </nav>

    <main class="prose" role="main">
      {{ content | safe }}
    </main>
  </body>
</html>
